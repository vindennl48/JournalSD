<p id="notice"><%= notice %></p>

<h1>Entries</h1>

<table>
  <thead>
    <tr>
      <th>Entry#</th>
      <th>Date</th>
      <th>Title</th>
      <th>Secret</th>
      <th>Category</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @entries.each do |entry| %>
      <tr>
        <td><%= entry.id %></td>
        <td><%= entry.created_at.in_time_zone('Eastern Time (US & Canada)').strftime("%a, %b %m %Y") %></td>
        <td><%= entry.title %></td>
        <td><%= entry.secret ? "Yes" : "No" %></td>
        <td><%= entry.category.name %></td>
        <td><%= link_to 'Show', entry %></td>
        <td><%= link_to 'Edit', edit_entry_path(entry) %></td>
        <td><%= link_to 'Destroy', entry, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

